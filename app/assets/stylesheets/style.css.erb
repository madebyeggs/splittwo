html, body {background-color:#000000;height:100%;}
p, h1, h2, h3, h4, h5 {color:#ffffff;}
h2 {font-size:24px;text-transform:uppercase;}
a, a:hover {text-decoration:none;color:#ffffff;}
.form-group, em.form-group {font-size:18px;}
.deviseStyling {margin:105px 0px 0px 25px}
.userInfo {position:absolute;width:270px;top:10px;left:10px;font-size:14px;color:#ffffff;font-style:italic;}

.leftSide {width:100%;padding-top:120px;}
.rightSide {height:100%;border-left:1px solid #3e3e3e;width:100%;padding:0px;margin:0px 0 0px 0;font-size:4em;color:#ffffff;font-family:'Raleway'}

///NAVIGATION

.logoContainer {width:100%;}
.logo {width:210px!important;margin:0 auto;}
.logo img {max-width:100%;margin:0 auto;}
ul.navigation {list-style-type: none;}
.navigationWrapper {width:280px;margin:80px auto;}
.navigation a, .client {text-transform:uppercase;font-size:1.1em!important;color:#ffffff;font-family:'Raleway'}
li.navButton {margin:8px 0px 8px 0px!important;}
.social {width:193px;margin:100px auto 0px auto;}
.centerSocial {margin:0 auto;}
.fa {color:#ffffff;margin-right:5px;}
.pipe {font-weight:700;margin:0px 8px 0px 4px;color:#ffffff;}

///ARTIST-INDEX

.artist {width:100%;}
.info-wrapper {position:absolute;width:90%;bottom:6%;left:4%;background-color:rgba(0,0,0,0.8);padding:10px;display:none;}
.artistDescription, h5 {font-family:"Raleway", sans-serif;font-size:12px;margin:0px;color:#ffffff;text-align:justify;}
.colour {color:#ffa500;}
hr.dots {margin:6px 0px;border-top:1px dotted #fff;}
.lazy {width:100%;} .lazy img {width:100%;height:100%;}


///RESPONSIVE

@media (min-width: 992px) {
	
	.rightSide {border-left:0px;}
	
}