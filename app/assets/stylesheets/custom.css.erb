.passwordContent {
	position: fixed;
	top: 50%;
	left: 50%;
	 /* bring your own prefixes */
	transform: translate(-50%, -50%);
	width:320px;
}
.fa-lock {
	position:absolute;
	width:45px;
	margin:-80px auto 0px auto!important;
	padding-left:137.5px;
}
.passwordContent > input {-webkit-text-security:disc;height:48px;width:320px;color:#3a3a3a;padding:17px 48px 14.5px 15px;font-family:'Gotham';}
.fa.dark {color:#3a3a3a;position:absolute;right:15px;top:27px;display:none;}
.error {
	position: fixed;
	top: 50%;
	left: 50%;
	 /* bring your own prefixes */
	transform: translate(-50%, -50%);
	width:320px;
	margin-top:66px;
	background-color:#ff0000;color:#fff;font-family:"Gotham";width:320px;height:48px;text-align:center;text-transform:uppercase;padding-top:12.5px;
	display:none;
}

.projectlist a:hover { 
	cursor: url('	'), crosshair;
	cursor: url('../assets/more.png') 40 40, crosshair;
}

.projectlist a:hover .projectinfo { 
	background: #202326; 
	-webkit-transition: background .33s linear;
	-moz-transition: background .15s linear;
	-o-transition: background .15s linear;
	transition: background .15s linear; 
}
.overlay, .overlay2 {
    position:absolute;
	top:0px; 
	width:100%; 
	height:100%;
	margin:2px; 
	background:#202326; 
	opacity:0;
}
.overlay2 {background:#ff0000;opacity:0.4;}
.project:hover .overlay {
	opacity: 1;
	transition: opacity .35s ease-in-out;
	-moz-transition: opacity .35s ease-in-out;
	-webkit-transition: opacity .35s ease-in-out;
}
.customName {text-align:left;margin:30px 0px 22px 0px;}
.customSeparator {color:#ffffff; margin:54px 0px 54px 0px;}
.customInfo {width:60%;margin:54px 20%;padding:2px 0px 40px 0px;}
.customDetail {margin:0px 0px;text-align:left;}
.customInfo p {margin:24px 0px;font-size:16px;font-family:"Gotham";}
.customSquareImage {-webkit-filter: grayscale(100%);filter: grayscale(100%);-webkit-filter: brightness(35%);}
.custom-bottom {width:100%;clear:both;float:left;margin:30px 0px 40px 0px;}
.customCloseIcon {
	position:absolute;
	width: 48px;
	height: 48px;
	background: url(<%= asset_path 'bg-close.png' %>) center no-repeat;
	background-size:48px 48px;
	cursor: pointer;
	z-index: 1000000000;
	top:30px;
	left:30px;
}
.customLogo {width:150px;position:absolute;right:30px;z-index:100000000000;top:30px;}
.customLogo img {max-width:100%;}
.customLinks {position:absolute;margin:0px 1.5px -30px 1.5px;}
.customSocialLinks {font-size:20px!important;margin-right:-5px;}
.customTitle {letter-spacing:2px;text-align:center;margin-bottom:54px;}
.parent2, .parent3 {position:relative;}
.child2 {
	padding:0px 10px;
	width:100%;
	text-align:center;
    position: absolute;
    left: 50%;
    top: 48%;
    transform: translate(-50%, -48%);
	z-index:2000000;
}
.customBtn {
  	display:inline-block;
  	text-align:center;
  	cursor:url('	'), crosshair;
	cursor:url('../assets/more.png') 40 40, crosshair;
  	border:2px solid white;
  	padding-top:44px;
  	font-size:18px;
	font-family:"Gotham";
	text-transform:uppercase;
  	width:410px;
  	height:120px;
	margin-left:66px;
}
.customBtn:hover {
	background-color:#202326;
	-webkit-transition: background .33s linear;
	-moz-transition: background .15s linear;
	-o-transition: background .15s linear;
	transition: background .15s linear;
	border-color:#e5e5e5;
	-webkit-transition: border-color .33s linear;
	-moz-transition: border-color .15s linear;
	-o-transition: border-color .15s linear;
	transition: border-color .15s linear;
}