#artistsCms {display:none;}
#releasesCms {display:none;}
#placementsCms {display:none;}
.table th {font-size:14px;text-transform:uppercase;}
.table tr {font-size:12px;}
.titles2 {margin-top:-13px;}

.fa {color:#ffffff;margin-right:5px;}
.socialLinks {font-size:20px!important;margin-right:-5px;}
.links {margin:-50px 0px -30px 0px;}
.spacer {margin-top:-15px!important;margin-bottom:22px!important;}
.leftSide {
	margin:0;
	height:100vh;
	width:100%;
}
.verticalAlignCentre {@include vertical-align();}
.rightSide {height:100%;border-left:1px solid #3e3e3e;width:100%;padding:0px;margin:0px 0 0px 0;font-size:4em;color:#ffffff;font-family:'Raleway'}

.closeIcon {
	display:inline;
	float:right;
	margin-top:30px;
	width: 48px;
	height: 48px;
	background: url(<%= asset_path 'bg-close.png' %>) center no-repeat;
	background-size:48px 48px;
	cursor: pointer;
	z-index: 8040;
}
.closeIconSmall {
	display:inline;
	float:right;
	margin-top:30px;
	width: 32px;
	height: 32px;
	background: url(<%= asset_path 'bg-close-small.png' %>) center no-repeat;
	background-size:32px 32px;
	cursor: pointer;
	z-index: 8040;
}
.parent {background-color:#000000;}
.child-image {width:100%;padding:2px;height:50vh;object-fit:cover;}
.child-image2 {width:100%;padding:2px;height:20vh;object-fit:cover;}

.child {
	padding:0px 10px;
	width:100%;
	text-align:center;
    position: absolute;
    left: 50%;
    top: 48%;
    transform: translate(-50%, -48%);
	z-index:2000000;
}
.halfHeight {height:50%;background-color:#ff0000;}
.bespokeHeader {text-transform:uppercase;font-family:'SplitCustomGotham';font-weight:100;font-size:40px;line-height:35px;}
.bespokeHeaderUnder {font-style:italic;font-family:'SplitCustomMrsEaves';font-weight:100;font-size:20px;margin-top:-25px;line-height:20px;}

/*FONT SIZES*/

.descriptionSize1, .descriptionSize1 i, .descriptionSize1 h3 {font-size:15px!important;font-style:none!important;font-weight:normal!important;}
.titleSize1 {font-size:16px!important;text-transform:uppercase!important;}
li.navButton {font-size:14px!important;text-transform:uppercase!important;font-style:none!important;font-weight:normal!important;}
.researchLogoNav {width:100px;margin-left:-3px;}
.researchLogoNav img {max-width:48%;}
.upcase {text-transform:uppercase!important;font-style:none!important;}
.italics {font-style:italic!important;}
.subtitle i {font-size:15px!important;}

/*NAVIGATION*/

.slicknav_menu {display:none;}
.logoContainer {width:100%;}
.logo {width:210px!important;margin:0 auto;}
.logo2 {width:210px!important;margin:12px 0px 0px 0px;}
.logo3 {width:210px!important;margin:20px auto 40px auto;}
.logo img, .logo2 img, .logo3 img {max-width:100%;margin:0 auto;}
ul.navigation, ul.navigation2 {list-style-type: none;}
.navigationWrapper {width:280px;margin:6rem auto;}
.navigation2 {margin:24px 0px 0px -35px;}
.navigation a, .navigation2 a, .client {text-transform:uppercase;font-size:1.1em!important;color:#ffffff;font-family:'Raleway'}
li.navButton {margin:8px 0px 8px 0px!important;}
.social, .social2 {width:193px;margin:1rem auto 0px auto;}
.centerSocial {margin:0 auto;}
.pipe {font-weight:700;margin:0px 8px 0px 4px;color:#ffffff;}

input {max-width:100}

/*ARTIST-INDEX*/

.artist {width:100%;}
.info-wrapper {position:absolute;width:90%;bottom:6%;left:4%;background-color:rgba(0,0,0,0.8);padding:10px;display:none;}
.artistDescription, h5 {font-family:"Raleway", sans-serif;font-size:12px;margin:0px;color:#ffffff;text-align:justify;}
.colour {color:#ffa500;}
hr.dots {margin:6px 0px;border-top:1px dotted #fff;}
.lazy {width:100%;} .lazy img {width:100%;height:100%;}
.lazyload {width:100%;} .lazyload img {width:100%;height:100%;}

/*ARTIST-SHOW*/

.artistInfo, .workInfo {width:80%;margin:20px 10%;padding:2px 0px 40px 0px;}
.artistName {text-align:left;margin:30px 0px 22px 0px;}
.artistSeparator {color:#ffffff; margin:30px 0px 15px 0px;}
.artistDetail {margin:20px 0px 40px;text-align:justify;}
.artist-left {width:55%;float:left;}
.artist-right {width:40%;margin-left:5%;float:right;}
.artistSquareImageContainer {margin-top:44px;}
.artistSquareImage {width:100%;}
.artistSquareImage img {max-width:100%;}
.artist-bottom {width:100%;clear:both;float:left;margin:30px 0px 40px 0px;}
.soundContainer {display:inline;}
.fluidMedia {
    position: relative;
    padding-bottom: 60.80%; /* proportion value to aspect ratio 16:9 (9 / 16 = 0.5625 or 56.25%) */
    padding-top: 30px;
    height: 0;
    overflow: hidden;
	margin-bottom:20px;
}

.fluidMedia iframe {
    position: absolute;
    top: 0; 
    left: 0;
    width: 100%;
    height: 100%;
}

.fluidMediaSmall, .fluidMediaSmall iframe {display:none;}

html,body,div {
    margin:0; padding:0;
}

html, body {
	width: 100%;
    height: 100%;
    overflow: hidden;
}

.royalSlider {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    height: auto;
    width: auto;
}


.royalSlider {
   font-size: 100px;
   text-align: left;
}
.slideTitle {
	width:210px;
	height:180px;
	position:absolute;
	z-index:1000;
	right:14%;
	background-color:rgba(0,0,0,0.4);padding:10px;
}
.slide-up
{
    top: 125px !important;
}

.slide-down
{
    bottom: 0px !important;
}
.slideTitle:hover {background-color:rgba(0,0,0,1);}
.slideTitle h5 {
	text-align:left!important;
}
.bigger {font-size:15px;text-align:left;}
.bigger2 {font-size:14px;text-align:left;}
.mobile {display:none;}
.thumb {width:225px}
.thumb2 {width:100px}
.thumb .img, .thumb2 .img {max-width:100%;}
.align-right {text-align:right;}

/*MOBILE*/

@media (max-width: 992px) {
	
	body {height:100vh;overflow-y: scroll;}
	.slideTitle {
		width:60%;
		left:20%;
		top:50px;
	}
	.bigger {font-size:18px;text-align:center;}
	.bigger2 {font-size:14px;text-align:center;}
	.fluidMedia, .fluidMedia iframe {display:none;}
	.fluidMediaSmall, .fluidMediaSmall iframe {display:inline;width:100%;height:100%;}
	.leftSide {
		margin:0 0 -100px 0;
		height:460px;
		width:100%;
	}
	.rightSide {border-left:0px;}
	#menu {display:none;}
	.slicknav_menu {display:block;}
	.social {display:none;}
	.social2 {padding-bottom:170px;}
	.logo {width:180px!important;margin:-120px auto -30px auto;}
	.logo2 {width:180px!important;}
	.logo img, .logo2 img {max-width:100%;margin:0 auto;}
	.artist-left {width:100%;clear:both;margin-right:200px;}
	.artist-right {display:none;}
	.artistInfo, .workInfo {width:80%;margin:10px 10%;padding:2px 0px 40px 0px;}
	.desktop {display:none;}
	.mobile {display:block;}
	
}