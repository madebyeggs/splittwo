/*GENERAL*/
@mixin vertical-align($position: relative) {
  position: $position;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
}
html, body {background-color:#000000;height:100%;color:#ffffff;}
p, h1, h2, h3, h4, h5 {color:#ffffff;}
h2 {font-size:24px;text-transform:uppercase;}
a, a:hover, a:visited {text-decoration:none;color:#ffffff!important;}
.existingImageName {margin:none;font-size:12px;margin-top:-10px;}
.canScroll {height:100vh;overflow-y: auto;}
.form-group, em.form-group {font-size:18px;}
.deviseStyling {margin:105px 0px 0px 25px}
.marginTopOverride {margin:15px 0px 0px 25px}
.userInfo {position:absolute;width:20%;top:10px;left:12%;font-size:14px;color:#ffffff;font-style:italic;text-align:right;z-index:1000;}
.cmsTable {padding:0px 20px;}
.csvInput {float:left;margin:20px 0px 25px -155px;}
.csvInput2 {float:left;margin:20px 0px 25px 0px;}
.csvInput3 {float:left;margin:20px 0px 25px 12px;}
.csvInput4 {float:left;margin:20px 0px 25px 0px;}
.marginCsv {margin:-10px 0px 0px 0px;}
.marginCsv2 {margin:-10px 0px 0px 0px;}
.inline {float:left;}
.black {color:black;}
th:after {
    content: "&nbsp;";
    display: block;
    line-height: 16px;
    color: transparent;
}
