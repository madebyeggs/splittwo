<div class="canScroll">	
	<div class="artistInfo">
		<%= link_to '', releases_path, :class => "closeIcon" %>
		<h1 class="artistName titleSize1"><%= @release.artist_name %> / <%= @release.track_name %></h1>
		<hr class="artistSeparator" />
		<% if @release.vimeo? %>
			<div class="videoMaster">
				<div class="videoDesktop desktopME">
					<div class="fitvids responsiveVideo2">
						<div class="plyr js-player">
						    <div data-video-id="<%= @release.vimeo %>" data-type="<%= @release.platform %>"></div>
						</div>
					</div>
				</div>
				<div class="videoMobile mobileME">
					<div class="fitvids responsiveVideo2">
						<% if @release.platform == 'vimeo' %>
							<div class="plyr js-player">
								<% release_vimeo_mobile = @release.vimeo[18..-1] %>
						    	<iframe src="https://player.vimeo.com/video/<%= release_vimeo_mobile %>" 
								width="640" height="360" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen>
								</iframe>
							</div>
						<% else %>
							<div class="plyr js-player">
						    	<div data-video-id="<%= @release.vimeo %>" data-type="<%= @release.platform %>"></div>
							</div>
						<% end %>
					</div>
				</div>
				<hr class="projectSeparator" />
				<div class="artist-left">
					<div class="artistSquareImageContainer">
						<div class="artistSquareImage">
							<%= image_tag(@release.image, :class => "artistSquareImage") %>
						</div>
					</div>
				</div>
				<div class="artist-right">
					<p class="artistDetail"><%= simple_format @release.description, :class => "artistDetail descriptionSize1" %></p>
				</div>
			</div>
		<% else %>
			<div class="artist-left">
				<div class="artistSquareImageContainer">
					<div class="artistSquareImage">
						<%= image_tag(@release.image, :class => "artistSquareImage") %>
					</div>
				</div>
			</div>
			<div class="artist-right">
				<p class="artistDetail"><%= simple_format @release.description, :class => "artistDetail descriptionSize1" %></p>
			</div>
			<div class="artist-bottom">
				<hr class="projectSeparator" />
			</div>
		<% end %>
	</div>
</div>
