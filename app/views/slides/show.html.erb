<div class="canScroll">
	<% if @slide.model_name == 'Work' %>
		<div class="workInfo">
			<%= link_to '', slides_path, :class => "closeIcon" %>
			<h1 class="artistName titleSize1"><%= @slide.slide_title %> / <%= @slide.slide_title2 %></h1>
			<h3 class="projectSubtitle spacer descriptionSize1 upcase italics">
				<% if @slide.track_name? && @slide.artist_name? %>
					<em>MUSIC - </em>"<%= @slide.track_name %>" by <%= @slide.artist_name %>
				<% elsif @slide.artist_name? %>
					<em>MUSIC by <%= @slide.artist_name %>
				<% else%>
				<% end %>
			</h3>
			<hr class="artistSeparator" />
			<% if @slide.vimeo? %>
				<div class="videoMaster">
					<div class="videoDesktop">
						<div class="fitvids responsiveVideo2">
							<div class="plyr js-player">
							    <div data-video-id="<%= @slide.vimeo %>" data-type="<%= @slide.platform %>"></div>
							</div>
						</div>
					</div>
				</div>
			<% end %>
			<% if @slide.vimeo? %><hr class="projectSeparator" /><% end %>
			<% if @slide.description? %><p class="projectDetail">
				<%= simple_format @slide.description, :class => "projectDetail descriptionSize1" %></p>
			<% end %>
		</div>
	<% else %>
		<div class="artistInfo">
			<%= link_to '', slides_path, :class => "closeIcon" %>
			<h1 class="artistName titleSize1">
				<%= @slide.slide_title %>
				<% if @slide.slide_title2? %>
					/ <%= @slide.slide_title2 %>
				<% else %>
				
				<% end %>
			</h1>
			<hr class="artistSeparator" />
			<% if @slide.vimeo? %>
				<div class="videoMaster">
					<div class="videoDesktop desktopME">
						<div class="fitvids responsiveVideo2">
							<div class="plyr js-player">
							    <div data-video-id="<%= @slide.vimeo %>" data-type="<%= @slide.platform %>"></div>
							</div>
						</div>
					</div>
					<div class="videoMobile mobileME">
						<div class="fitvids responsiveVideo2">
							<% if @slide.platform == 'vimeo' %>
								<div class="plyr js-player">
									<% slide_vimeo_mobile = @slide.vimeo[18..-1] %>
							    	<iframe src="https://player.vimeo.com/video/<%= slide_vimeo_mobile %>" 
									width="640" height="360" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen>
									</iframe>
								</div>
							<% else %>
								<div class="plyr js-player">
							    	<div data-video-id="<%= @slide.vimeo %>" data-type="<%= @slide.platform %>"></div>
								</div>
							<% end %>
						</div>
					</div>
					<hr class="projectSeparator" />
					<div class="artist-left">
						<div class="artistSquareImageContainer">
							<div class="artistSquareImage">
								<%= image_tag(@slide.image, :class => "artistSquareImage") %>
							</div>
						</div>
					</div>
					<div class="artist-right">
						<p class="artistDetail"><%= simple_format @slide.description, :class => "artistDetail descriptionSize1" %></p>
					</div>
				</div>
			<% else %>
				<div class="artist-left">
					<div class="artistSquareImageContainer">
						<div class="artistSquareImage">
							<%= image_tag(@slide.image, :class => "artistSquareImage") %>
						</div>
					</div>
				</div>
				<div class="artist-right">
					<p class="artistDetail"><%= simple_format @slide.description, :class => "artistDetail descriptionSize1" %></p>
				</div>
				<div class="artist-bottom">
					<hr class="projectSeparator" />
				</div>
			<% end %>
		</div>
	<% end %>
</div>
<script>
	var slideDialog = new FacebookFeedDialog(838327899644745,'<%= request.original_url %>','http://www.splitmusic.co.uk/share_closes');
	slideDialog.addParam('title','<%= @slide.slide_title.split.join(' ') %>');
	slideDialog.addParam('description','<%= @slide.description.split.join(' ') rescue nil %>');
	slideDialog.addParam('picture','<%= @slide.fb_image %>');
</script>
