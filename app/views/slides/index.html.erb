<div class="">
	<div class="royalSlider rsDefault">
		<% @sorted_slides.each do |slide| %>
			<a href="<%= slide_path(slide) %>">
			    <div class="slideMaster">
					<div class="slideOverlay">
						<div class="rsGCaption">
							<% if slide.model_name == 'Work' %>
								<%= slide.slide_title %> / <%= slide.slide_title2 %><br/>
								"<%= slide.track_name %>" BY <%= slide.artist_name %>
							<% else %>
								<%= slide.slide_title %> / <%= slide.slide_title2 %>
							<% end %>
						</div>
					</div>
					<div class="imageContainer">
						<% if slide.slide_image? %>
							<%= image_tag(slide.slide_image, class: "rsImg") %>
						<% else %>
							<%= image_tag(slide.image, class: "rsImg") %>
						<% end %>
					</div>
				</div>
			</a>
		<% end %>
	</div>
</div>

<script>
	
	var sliderInstance = $('.royalSlider').royalSlider({
		autoPlay: {
			// autoplay options go gere
	    	enabled: true,
	    	pauseOnHover: false,
			delay: 7000
		},
		imageAlignCenter: true,
		imageScaleMode: 'fill',
		loop: true,
		arrowsNav: true
	}).data("royalSlider");
	
	var slider = $(".royalSlider").data('royalSlider');
		
</script>