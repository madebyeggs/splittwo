<div class="deviseStyling col-md-11 abouts marginTopOverride canScroll">
	<h2 class="titles">Add your Re-search here!</h2>
	<%= bootstrap_form_for(@research) do |f| %>
		<div class="vimeoSectionInForm">
			<div class="textField2"><%= f.file_field :image, label: "Placement main square image (crop to 1680px X 915px before upload)" %>
				<% if @research.image.exists? %>
					<p class="existingImageName">{ Current Image: "<%= @research.image_file_name %>" }</p>
				<% end %>
			</div>
			<div class="textField2"><%= f.text_field :title, label: "Title" %></div>
		</div>
	  	<div class="submitLarge"><%= f.submit 'Submit', class: "btn btn-success"  %></div>
	<% end %>
</div>
