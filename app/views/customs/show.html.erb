<div class="parent3">
	<%= link_to '', customs_path, :class => "customCloseIcon" %>
</div>
<div class="canScroll">	
	<div class="parent2">
		<%= image_tag(@custom.image, :lazy => true, class: "lazy child-image customSquareImage") %>
		<div class="child2 projectInfo">
			<h1 class="bespokeHeader"><%= @custom.name %></h1>
			<h1 class="bespokeHeaderUnder"><%= @custom.genre %></h1>
		</div>
	</div>
	<div class="customInfo">
		<p class="customDetail"><%= simple_format @custom.description, :class => "customDetail" %></p>
		<hr class="customSeparator" />
		<h1 class="customTitle">Listen</h1>
		<iframe width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/<%= @custom.soundcloud %>&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true"></iframe>
		<hr class="customSeparator" />
		<h1 class="customTitle">Download</h1>
		<div class="customBtn">Download wavs</div><div class="customBtn">Download mp3s</div>
		<hr class="customSeparator" />
		<% if @custom.vimeo_1? || @custom.vimeo_2? || @custom.vimeo3? %>
			<h1 class="customTitle">Watch</h1>
			<div class="fitvids">
				<iframe class="fitvids" src="https://player.vimeo.com/video/<%= @custom.vimeo_1 %>?title=0&amp;byline=0&amp;" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
			</div>
		<% end %>
				
	</div>
</div>