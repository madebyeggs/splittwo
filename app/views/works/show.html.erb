<div class="canScroll">
	<div class="workInfo">
		<%= link_to '', works_path, :class => "closeIcon" %>
		<h1 class="artistName titleSize1"><%= @work.brand_name %> "<%= @work.campaign_title %>"</h1>
		<h3 class="projectSubtitle fixerSpace descriptionSize1 upcase"><%= @work.agency %></h3>
		<h3 class="projectSubtitle spacer descriptionSize1 upcase italics"><em>MUSIC - </em>"<%= @work.track_name %>" by <%= @work.artist_name %></h3>
		<div class="links">
			<input id="twitter" type="hidden" 
				data-url="<%= @currentUrl %>"
				data-media="<%= @work.fb_image %>"
				data-description="Split Music | NEW WORK: for <%= @work.brand_name %>" 
				data-via="FairsplitMusic"
				data-related="FairsplitMusic"   
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'twitter' }, :class => 'prettySocial fa fa-twitter socialLinks' %>
			<a class="fa fa-facebook socialLinks" href="javascript:workDialog.open()"></a>
			<input id="googleplus" type="hidden" 
				data-url="https://vimeo.com/<%= @work.vimeo %>"
				data-media="<%= @work.fb_image %>"
				data-description="Split Music | NEW WORK: <%= @work.campaign_title %> for <%= @work.brand_name %> featuring <%= @work.track_name %> by <%= @work.artist_name %>"
				data-title="<%= @work.brand_name %> - <%= @work.campaign_title %>"
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'googleplus' }, :class => 'prettySocial fa fa-google-plus socialLinks' %>
			<input id="pinterest" type="hidden" 
				data-url="https://vimeo.com/<%= @work.vimeo %>" 
				data-media="<%= @work.fb_image %>"
				data-description="Split Music | NEW WORK: <%= @work.campaign_title %> for <%= @work.brand_name %> featuring <%= @work.track_name %> by <%= @work.artist_name %>"
				data-title="<%= @work.brand_name %> - <%= @work.campaign_title %>"
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'pinterest' }, :class => 'prettySocial fa fa-pinterest socialLinks' %>
		</div>
		<hr class="artistSeparator" />
		<div class="fitvids">
			<% if @work.vimeo? %>
        	<iframe class="fitvids" id="videoPlayer" src="https://player.vimeo.com/video/<%= @work.vimeo %>?title=0&amp;byline=0&amp;" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
			<% end %>
		</div>
		<% if @work.vimeo? %><hr class="projectSeparator" /><% end %>
		<% if @work.description? %><p class="projectDetail"><%= simple_format @work.description, :class => "projectDetail descriptionSize1" %></p><% end %>
	</div>
</div>
<script>
	var workDialog = new FacebookFeedDialog(838327899644745,'<%= request.original_url %>','http://www.splitmusic.co.uk/share_closes');
	workDialog.addParam('name','<%= @work.brand_name %> - <%= @work.campaign_title.split.join(' ') %>');
	workDialog.addParam('description','<%= @work.description.split.join(' ') %>');
	workDialog.addParam('picture','<%= @work.fb_image %>');
</script>