<div class="canScroll">
	<div class="workInfo">
		<%= link_to '', works_path, :class => "closeIcon" %>
		<h1 class="artistName titleSize1"><%= @work.brand_name %> <%= @work.campaign_title %></h1>
		<h3 class="projectSubtitle fixerSpace descriptionSize1 upcase"><%= @work.agency %></h3>
		<h3 class="projectSubtitle spacer descriptionSize1 upcase italics">
			<% if @work.track_name? %>
				<em>MUSIC - </em>"<%= @work.track_name %>" by <%= @work.artist_name %>
			<% else %>
				<em>MUSIC by <%= @work.artist_name %>
			<% end %>
		</h3>
		<hr class="artistSeparator" />
		<% if @work.vimeo? %>
			<div class="videoMaster">
				<div class="videoDesktop">
					<div class="fitvids responsiveVideo2">
						<div class="plyr js-player">
						    <div data-video-id="<%= @work.vimeo %>" data-type="<%= @work.platform %>"></div>
						</div>
					</div>
				</div>
			</div>
		<% end %>
		<% if @work.vimeo? %><hr class="projectSeparator" /><% end %>
		<% if @work.description? %><p class="projectDetail">
			<%= simple_format @work.description, :class => "projectDetail descriptionSize1" %></p>
		<% end %>
	</div>
</div>
<script>
	var workDialog = new FacebookFeedDialog(838327899644745,'<%= request.original_url %>','http://www.splitmusic.co.uk/share_closes');
	workDialog.addParam('name','<%= @work.brand_name %> - <%= @work.campaign_title.split.join(' ') %>');
	workDialog.addParam('description','<%= @work.description.split.join(' ') rescue nil %>');
	workDialog.addParam('picture','<%= @work.fb_image %>');
</script>