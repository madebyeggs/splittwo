<div class="deviseStyling abouts marginTopOverride canScroll">
	<h2 class="titles">Add your placement here!</h2>
	<%= bootstrap_form_for(@work) do |f| %>
		<div class="vimeoSectionInForm">
			<h4 class="customTitles">Video link</h4>
			<div class="textField2"><%= f.text_field :vimeo, label: "Video URL" %></div>
			<div class="textField2">
				<%= f.select :platform, options_for_select(["vimeo", "youtube"], @work.platform) %>
			</div>
			<div class="textField2"><%= f.text_field :brand_name, label: "Brand name" %></div>
			<div class="textField2"><%= f.text_field :campaign_title, label: "Campaign title" %></div>
		</div>
		<div class="vimeoSectionInForm">
			<div class="textField"><%= f.text_field :agency, label: "Agency name" %></div>
			<div class="textField"><%= f.text_field :track_name, label: "Track name" %></div>
	    	<div class="textField"><%= f.text_field :artist_name, label: "Artist name" %></div>
		</div>
		<div class="fullWidthField smallText"><%= f.check_box :slideshow, label: "Add to slideshow?" %></div>
	  	<div class="vimeoSectionInForm">
			<div class="textField"><%= f.text_field :slide_title, label: "Slideshow title" %></div>
			<div class="textField"><%= f.text_field :slide_title2, label: "Slideshow under title (colour)" %></div>
			<div class="textField"><%= f.text_area :slide_title3, label: "Slideshow description" %></div>
		</div>
		<div class="vimeoSectionInForm">
			<div class="textField"><%= f.file_field :image, label: "Placement main square image (crop to 400px X 400px before upload)" %>
				<% if @work.image.exists? %>
					<p class="existingImageName">{ Current Image: "<%= @work.image_file_name %>" }</p>
				<% end %>
			</div>
			<div class="textField"><%= f.file_field :fb_image, label: "Facebook share image (crop to 1200px X 630px before upload)" %>
				<% if @work.fb_image.exists? %>
					<p class="existingImageName">{ Current Image: "<%= @work.fb_image_file_name %>" }</p>
				<% end %>
			</div>
			<div class="textField"><%= f.file_field :slide_image, label: "Slideshow image (crop to 1115px X 952px before upload)" %>
				<% if @work.slide_image.exists? %>
					<p class="existingImageName">{ Current Image: "<%= @work.slide_image_file_name %>" }</p>
				<% end %>
			</div>
			<div class="textField"><%= f.file_field :hero, label: "Newsletter hero image (crop to 564px X 235px before upload)" %>
				<% if @work.hero.exists? %>
					<p class="existingImageName">{ Current Image: "<%= @work.hero_file_name %>" }</p>
				<% end %>
			</div>
		</div>
		<div class="fullWidthField smallText"><%= f.text_area :description, label: "Project description" %></div>
	  	<div class="buttons">
			<div class="submitLarge"><%= f.submit 'Submit', class: "btn btn-success"  %></div>
			<div class="cancelButton"><%= link_to('Cancel', :back ,class: "btn btn-success")  %></div>
		</div>
	<% end %>
</div>
