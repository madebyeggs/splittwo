<table class="table table-striped" id="sortableArtist">
	<thead>
		<tr>
			<th>Image</th>
			<th>Line1 A</th>
			<th>Line1 B</th>
	 		<th>Line2 A</th>
			<th>Line2 B</th>
	 		<th>Video_URL</th>
			<th>Platform</th>
			<th>Slideshow?</th>
			<th>Newsletter?</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @artists.each do |artist| %>
 			<tr data-item-id=<%= "#{artist.id}" %> class="item">
			<td><%= image_tag(artist.image, class: "thumb2") %></td>
   			<td>
				<span class="rest-in-place" data-url="/artists/<%= artist.slug %>" data-object="artist" 
					data-attribute="slide_title" data-placeholder="empty">
			  		<%= artist.slide_title %>
				</span>
			</td>
   			<td>
				<span class="rest-in-place" data-url="/artists/<%= artist.slug %>" data-object="artist" 
					data-attribute="slide_title2" data-placeholder="empty">
			  		<%= artist.slide_title2 %>
				</span>
			</td>
   			<td>
				<span class="rest-in-place" data-url="/artists/<%= artist.slug %>" data-object="artist" 
					data-attribute="artist_name" data-placeholder="empty">
			  		<%= artist.artist_name %>
				</span>
			</td>
   			<td>
				<span class="rest-in-place" data-url="/artists/<%= artist.slug %>" data-object="artist" 
					data-attribute="track_name" data-placeholder="empty">
			  		<%= artist.track_name %>
				</span>
			</td>
			<td>
				<span class="rest-in-place" data-url="/artists/<%= artist.slug %>" data-object="artist" 
					data-attribute="vimeo" data-placeholder="ADD VIDEO URL">
			  		<%= artist.vimeo %>
				</span>
			</td>
			<td>
				<span class="rest-in-place" data-url="/artists/<%= artist.slug %>" data-object="artist" 
					data-attribute="platform" data-placeholder="ADD VIDEO PLATFORM">
			  		<%= artist.platform %>
				</span>					
			</td>
			<td><%= best_in_place artist, :slideshow, as: :checkbox, collection: {false: "No", true: "Yes"} %></td>
			<td><%= best_in_place artist, :newsletter, as: :checkbox, collection: {false: "No", true: "Yes"} %></td>
			<td>
				<%= link_to 'Edit', edit_artist_path(artist), class: "btn btn-success" %>
				<%= link_to 'Delete', artist, method: :delete, data: {confirm: "Are you sure you want to delete this record?"}, class: "btn btn-success" %>
			</td>
 			</tr>
		<% end %>
	</tbody>
</table>