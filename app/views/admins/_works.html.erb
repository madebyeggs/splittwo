<table class="table table-striped" id="sortableWork">
	<tbody>
		<thead>
  		<tr>
		<th>Image</th>
    	<th>Line1 A</th>
    	<th>Line1 B</th>
		<th>Line2 A</th>
		<th>Line2 B</th>
		<th>Video URL</th>
		<th>Platform</th>
		<th>Slideshow?</th>
		<th>Newsletter?</th>
		<th></th>
  		</tr>
		</thead>
		<tbody>
  		<% @works.each do |work| %>
    		<tr data-item-id=<%= "#{work.id}" %> class="item">
			<td><%= image_tag(work.image, class: "thumb2") %></td>
      			<td>
				<span class="rest-in-place" data-url="/works/<%= work.slug %>" data-object="work" 
					data-attribute="slide_title" data-placeholder="empty">
			  		<%= work.slide_title %>
				</span>
			</td>
			<td>
				<span class="rest-in-place" data-url="/works/<%= work.slug %>" data-object="work" 
					data-attribute="slide_title2" data-placeholder="empty">
			  		<%= work.slide_title2 %>
				</span>
			</td>
			<td>
				<span class="rest-in-place" data-url="/works/<%= work.slug %>" data-object="work" 
					data-attribute="artist_name" data-placeholder="empty">
					<%= work.artist_name %>
				</span>
			</td>
			<td>
				<span class="rest-in-place" data-url="/works/<%= work.slug %>" data-object="work" 
					data-attribute="track_name" data-placeholder="empty">
					<%= work.track_name %>
				</span>
			</td>
			<td>
				<span class="rest-in-place" data-url="/works/<%= work.slug %>" data-object="work" 
					data-attribute="vimeo" data-placeholder="Video URL">
					<%= work.vimeo %>
				</span>
			</td>
			<td>
				<span class="rest-in-place" data-url="/works/<%= work.slug %>" data-object="work" 
					data-attribute="platform" data-placeholder="ADD VIDEO PLATFORM">
			  		<%= work.platform %>
				</span>					
			</td>
			<td><%= best_in_place work, :slideshow, as: :checkbox, collection: {false: "No", true: "Yes"} %></td>
			<td><%= best_in_place work, :newsletter, as: :checkbox, collection: {false: "No", true: "Yes"} %></td>
			<td class="align-right">
				<%= link_to 'Edit', edit_work_path(work), class: "btn btn-success" %>
				<%= link_to 'Delete', work, method: :delete, data: {confirm: "Are you sure you want to delete this record?"}, 
				class: "btn btn-success" %>
			</td>
    		</tr>
  		<% end %>
	</tbody>
</table>