<%= render :partial => 'admins/navigation' %>
<div class="col-md-10 cmsTable canScroll">
	<h2 style="color:#5cb85c"><em><%= flash[:notice] %></em></h2>
	<h2 class="titles2 placements">Bespoke Videos</h2>
	<%= link_to 'Add New Custom Video', new_customvid_path, class: "btn btn-success csvInput2"  %>
	<%= link_to 'Launch Custom Page', customs_path, class: "btn btn-success csvInput3", target: "blank"  %>
	<table class="table table-striped" id="sortableCustomvid">
	 		<thead>
	   		<tr>
	     		<th>Vimeo ID</th>
	     		<th>Brand Name</th>
				<th>Campaign Title</th>
				<th>Artist</th>
				<th></th>
	   		</tr>
	 		</thead>
	 		<tbody>
	   		<% @customvids.each do |customvid| %>
	     			<tr data-item-id=<%= "#{customvid.id}" %> class="item">
	       			<td>
						<span class="rest-in-place" data-url="/customvids/<%= customvid.id %>" data-object="customvid" data-attribute="vimeo_id" data-placeholder="Vimeo ID">
					  		<%= customvid.vimeo_id %>
						</span>
					</td>
					<td>
						<span class="rest-in-place" data-url="/customvids/<%= customvid.id %>" data-object="customvid" data-attribute="brand_name" data-placeholder="Brand Name">
					  		<%= customvid.brand_name %>
						</span>
					</td>
					<td>
						<span class="rest-in-place" data-url="/customvids/<%= customvid.id %>" data-object="customvid" data-attribute="campaign_title" data-placeholder="Campaign Title">
					  		<%= customvid.campaign_title %>
						</span>
					</td>
					<td><%= customvid.custom.name %></td>
					<td>
						<%= link_to 'Edit', edit_customvid_path(customvid), class: "btn btn-success" %>
						<%= link_to 'Delete', customvid, method: :delete, data: {confirm: "Are you sure you want to delete this record?"}, class: "btn btn-success" %>
					</td>
	     			</tr>
	   		<% end %>
	 		</tbody>
	</table>
</div>