<div class="canScroll">	
	<div class="artistInfo">
		<%= link_to '', artists_path, :class => "closeIcon" %>
		<h1 class="artistName titleSize1"><%= @artist.name %></h1>
		<div class="links">
			<input id="twitter" type="hidden" 
				data-url="<%= @currentUrl %>"
				data-media="<%= @artist.fb_image %>"
				data-description="<%= truncate(@artist.description, :length => 50) %>" 
				data-via="FairsplitMusic <% if @artist.twitter_name.blank? || @artist.twitter_name == '' %><% else %>@<%= @artist.twitter_name %><% end %>"
				data-related="FairsplitMusic"   
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'twitter' }, :class => 'prettySocial fa fa-twitter socialLinks' %>
			<a class="fa fa-facebook socialLinks" href="javascript:artistDialog.open()"></a>
			<input id="googleplus" type="hidden" 
				data-url="<%= @currentUrl %>"
				data-media="<%= @artist.fb_image %>"
				data-description="<%= @artist.description %>"
				data-title="<%= @artist.name %>"
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'googleplus' }, :class => 'prettySocial fa fa-google-plus socialLinks' %>
			<input id="pinterest" type="hidden" 
				data-url="<%= @currentUrl %>" 
				data-media="<%= @artist.fb_image %>"
				data-description="<%= @artist.description %>"
				data-title="<%= @artist.name %>"
				class="socialLinksHidden"
			>
			<%= link_to "", "#", data: { type: 'pinterest' }, :class => 'prettySocial fa fa-pinterest socialLinks' %>
		</div>
		
		<hr class="artistSeparator" />
		<div class="artist-left">
			<p class="artistDetail"><%= simple_format @artist.description, :class => "artistDetail descriptionSize1" %></p>
		</div>
		<div class="artist-right">
			<div class="artistSquareImageContainer">
				<div class="artistSquareImage">
					<%= image_tag(@artist.image, :class => "artistSquareImage") %>
				</div>
			</div>
		</div>
		<div class="artist-bottom">
			<% if @artist.soundcloud? %>
				<iframe width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/<%= @artist.soundcloud %>&amp;color=bdbdbd&amp;background_color=000000&amp;auto_play=false&amp;hide_related=true&amp;show_comments=false&amp;show_user=false&amp;show_reposts=false&amp;show_artwork=false">
				</iframe>
			<% end %>
		</div>
	</div>
</div>
<script>
	var artistDialog = new FacebookFeedDialog(838327899644745,'<%= request.original_url %>','http://www.splitmusic.co.uk/share_closes');
	artistDialog.addParam('name','<%= @artist.name.split.join(' ') %>');
	artistDialog.addParam('description','<%= @artist.description.split.join(' ') %>');
	artistDialog.addParam('picture','<%= @artist.fb_image %>');
</script>