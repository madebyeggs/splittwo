<div class="deviseStyling col-md-11 abouts marginTopOverride canScroll">
	<h2 class="titles">Add your artist here!</h2>
	<%= bootstrap_form_for(@artist) do |f| %>
	  	<%= f.text_field :name, label: "Artist name" %>
		<%= f.text_area :description, label: "Description" %>
		<%= f.text_field :soundcloud, label: "Soundcloud unique identifier (e.g. 102276575)" %>
		<%= f.check_box :slideshow, label: "Add to slideshow?" %>
	  	<%= f.text_field :slide_title, label: "Slideshow title first" %>
		<%= f.text_field :slide_title2, label: "Slideshow title second (colour)" %>
		<%= f.text_field :slide_title3, label: "Slideshow title third" %>
		<%= f.text_field :fb_url, label: "Artist's Facebook URL" %>
	    <%= f.text_field :twitter_name, label: "Artist's Twitter name" %>
		<%= f.file_field :image, label: "Main square image (crop to 400px X 400px before upload)" %>
		<% if @artist.image.exists? %>
			<p class="existingImageName">{ Current Image: "<%= @artist.image_file_name %>" }</p>
		<% end %>
		<%= f.file_field :fb_image, label: "Facebook share image (crop to 1200px X 630px before upload)" %>
		<% if @artist.fb_image.exists? %>
			<p class="existingImageName">{ Current Image: "<%= @artist.fb_image_file_name %>" }</p>
		<% end %>
		<%= f.file_field :slide_image, label: "Slideshow image (crop to 1115px X 952px before upload)" %>
		<% if @artist.slide_image.exists? %>
			<p class="existingImageName">{ Current Image: "<%= @artist.slide_image_file_name %>" }</p>
		<% end %>
	  	<%= f.submit 'Submit', class: "btn btn-success"  %>
	<% end %>
</div>
