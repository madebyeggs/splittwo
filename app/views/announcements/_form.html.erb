<div class="deviseStyling col-md-11 abouts marginTopOverride canScroll">
	<h2 class="titles">Add your announcement here!</h2>
	<%= bootstrap_form_for(@announcement) do |f| %>
		<div class="vimeoSectionInForm"><%= f.text_area :description, label: "Description" %></div>
		<div class="vimeoSectionInForm">
			<h4 class="customTitles">Video link</h4>
			<div class="textField2"><%= f.text_field :vimeo, label: "Video URL" %></div>
			<div class="textField2">
				<%= f.select :platform, options_for_select(["vimeo", "youtube"], @announcement.platform) %>
			</div>
		</div>
		<div class="vimeoSectionInForm">
			<div class="textField"><%= f.text_field :soundcloud, label: "Soundcloud playlist embed code" %></div>
			<div class="textField smallText"><%= f.check_box :slideshow, label: "Add to slideshow?" %></div>
			<div class="textField smallText"><%= f.check_box :newsletter, label: "Add to newsletter?" %></div>
		</div>
		<div class="vimeoSectionInForm">
			<div class="textField"><%= f.text_field :slide_title, label: "Slideshow title" %></div>
			<div class="textField"><%= f.text_field :slide_title2, label: "Slideshow under title (colour)" %></div>
			<div class="textField"><%= f.text_area :slide_title3, label: "Slideshow description" %></div>
		</div>
		<div class="vimeoSectionInForm">
			<div class="textField">
				<%= f.file_field :slide_image, label: "Main image (crop to 1115px X 952px before upload)" %>
				<% if @announcement.slide_image.exists? %>
					<p class="existingImageName">{ Current Image: "<%= @announcement.slide_image_file_name %>" }</p>
				<% end %>
			</div>
			<div class="textField">
				<%= f.file_field :fb_image, label: "Facebook share image (crop to 1200px X 630px before upload)" %>
				<% if @announcement.fb_image.exists? %>
					<p class="existingImageName">{ Current Image: "<%= @announcement.fb_image_file_name %>" }</p>
				<% end %>
			</div>
			<div class="textField"><%= f.file_field :hero, label: "Newsletter hero image (crop to 564px X 235px before upload)" %>
				<% if @announcement.hero.exists? %>
					<p class="existingImageName">{ Current Image: "<%= @announcement.hero_file_name %>" }</p>
				<% end %>
			</div>
		</div>
	  	<div class="submitLarge"><%= f.submit 'Submit', class: "btn btn-success"  %></div>
	<% end %>
</div>