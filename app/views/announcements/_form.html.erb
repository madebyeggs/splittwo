<div class="deviseStyling col-md-11 abouts marginTopOverride canScroll">
	<h2 class="titles">Add your announcement here!</h2>
	<%= bootstrap_form_for(@announcement) do |f| %>
	  	<%= f.text_area :slide_title, label: "Slideshow title" %>
		<%= f.text_area :description, label: "Description" %>
		<%= f.check_box :slideshow, label: "Add to slideshow?" %>
		<%= f.text_field :soundcloud, label: "Soundcloud unique identifier (e.g. 102276575)" %>
		<%= f.text_field :vimeo, label: "Vimeo unique identifier (e.g.)" %>
		<%= f.file_field :slide_image, label: "Main image (crop to 1115px X 952px before upload)" %>
		<% if @announcement.slide_image.exists? %>
			<p class="existingImageName">{ Current Image: "<%= @announcement.slide_image_file_name %>" }</p>
		<% end %>
		<%= f.file_field :fb_image, label: "Facebook share image (crop to 1200px X 630px before upload)" %>
		<% if @announcement.fb_image.exists? %>
			<p class="existingImageName">{ Current Image: "<%= @announcement.fb_image_file_name %>" }</p>
		<% end %>
	  	<%= f.submit 'Submit', class: "btn btn-success"  %>
	<% end %>
</div>